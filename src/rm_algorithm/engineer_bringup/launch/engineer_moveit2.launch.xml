<launch>
    <let name="urdf_path"
        value="$(find-pkg-share rm_description)/urdf/mechine_arm.urdf"/>
    <let name="display_config_path"
        value="$(find-pkg-share engineer_bringup)/config/default.rviz"/>

    <node pkg="robot_state_publisher" exec="robot_state_publisher">
        <param name="robot_description"
            value="$(command 'xacro $(var urdf_path)')" />
    </node>

    <node pkg="controller_manager" exec="ros2_control_node">
        <!--经实测发现他会自动加上后缀，与别的节点联系不上 -->
        <remap from="/controller_manager/robot_description" to="/robot_description" />
        <param from="$(find-pkg-share engineer_bringup)/config/ros2_controllers.yaml" />
    </node>

    <node pkg="engineer_controller" exec="commander">
        <remap from="/controller_manager/robot_description" to="/robot_description" />
        <param from="$(find-pkg-share engineer_bringup)/config/ros2_controllers.yaml" />
    </node>

    <node pkg="controller_manager" exec="spawner" args="gripper_controller" />
    <node pkg="controller_manager" exec="spawner" args="arm_controller" />
    <node pkg="controller_manager" exec="spawner" args="joint_state_broadcaster" />

    <include file="$(find-pkg-share armbot_moveit2)/launch/move_group.launch.py"/>

    <node pkg="rviz2" exec="rviz2" output="screen"
        args='-d $(var display_config_path)'/> 
</launch>    